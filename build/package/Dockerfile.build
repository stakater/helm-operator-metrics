FROM stakater/go-glide:1.12.6
MAINTAINER "Stakater Team"

RUN apk update

RUN apk -v --update \
    add git build-base && \
    rm -rf /var/cache/apk/* && \
    mkdir -p "$GOPATH/src/github.com/stakater/helm-operator-metrics"

ADD . "$GOPATH/src/github.com/stakater/helm-operator-metrics"

RUN cd "$GOPATH/src/github.com/stakater/helm-operator-metrics" && \
    glide install --strip-vendor && \
    CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -a --installsuffix cgo --ldflags="-s" -o /helm-operator-metrics

COPY build/package/Dockerfile.run /

# Running this image produces a tarball suitable to be piped into another
# Docker build command.
CMD tar -cf - -C / Dockerfile.run helm-operator-metrics
